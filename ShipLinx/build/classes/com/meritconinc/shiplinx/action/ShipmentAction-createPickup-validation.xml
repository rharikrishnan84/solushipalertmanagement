<!DOCTYPE validators PUBLIC 
"-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="pickup.pickupDate_web">
		<field-validator type="requiredstring">
			<message>Pickup Date is required.</message>
		</field-validator>
	</field>
	<field name="pickup.pickupLocation">
		<field-validator type="requiredstring">
			<message>Pickup Location is required.</message>
		</field-validator>
	</field>
	<field name="pickup.address.address1">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
	<field name="pickup.address.city">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
	<field name="pickup.address.phoneNo">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field> 
	<field name="pickup.address.contactName">
		<field-validator type="requiredstring">
			<message key="requiredstring" />
		</field-validator>
	</field>
	<field name="pickup.carrierId">
		<field-validator type="required">
			<message key="requiredstring" />
		</field-validator>
		<field-validator type="long">
			<param name="min">1</param>
			<message>
				Carrier must be selected
			</message>
		</field-validator>
	</field>
	<field name="pickup.serviceId">
		<field-validator type="required">
			<message key="requiredstring" />
		</field-validator>
		<field-validator type="long">
			<param name="min">1</param>
			<message>
				Service must be selected
			</message>
		</field-validator>
	</field>
			
</validators>