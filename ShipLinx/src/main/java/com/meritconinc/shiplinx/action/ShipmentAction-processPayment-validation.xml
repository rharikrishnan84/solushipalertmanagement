<!DOCTYPE validators PUBLIC 
"-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="selectedOrder.creditCard.ccNumber">
		<field-validator type="requiredstring">
			<message key="creditCard.ccNumber.invalid" />
		</field-validator>
		<field-validator type="regex">
			<param name="expression">([0-9]*)</param>
			<message key="creditCard.ccNumber.invalid" />
		</field-validator>
	</field>

	<field name="selectedOrder.creditCard.cvd">
		<field-validator type="requiredstring">
			<message key="creditCard.ccCVDCode.invalid" />
		</field-validator>
		<field-validator type="regex">
			<param name="expression">([0-9]*)</param>
			<message key="creditCard.ccCVDCode.invalid" />
		</field-validator>
	</field>

</validators> 